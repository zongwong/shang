<template>
  <view class="container signed">
    <image src="../../images/signed.png" class="banner"></image>
    <view class="title">你已经连续签到<text class="light">3天</text>了</view>
    <view class="calendar">
      <view class="calendar_nav">
        <view>
          <view class="tw_row" @tap="prevMonth">
            <text class="icon icon_left" style="margin-right:12rpx;"></text>
            <text>上月</text>
          </view>
        </view>
        <view>{{year}}年{{month}}月</view>
        <view>
          <view class="tw_row" @tap="nextMonth">
            <text>下月</text>
            <text class="icon icon_right" style="margin-left:12rpx;"></text>
          </view>
        </view>
      </view>
      <view class="week_nav">
        <view>日</view>
        <view>一</view>
        <view>二</view>
        <view>三</view>
        <view>四</view>
        <view>五</view>
        <view>六</view>
      </view>
      <view class="date_wrap">
        <view class="date_item {{item.month!=month?'grayColor':''}} {{item.signed?'signed':''}}" wx:for="{{date.days}}" wx:key="day_{index}">{{item.showDate}}</view>
      </view>
    </view>
    <view class="rule">
      <view class="rule_title">签到规则</view>
      <view class="rule_detail">
        <view>1、每次签到获得1积分；</view>
        <view>2、本月连续签到额外获得5积分；</view>
        <view>3、本月签满额外获得20积分；</view>
        <view>4、如果中间有一天间断未签到的，重新开始计算连续签到时间；</view>
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import api from '../../interfaces/api'
  import datapicker from '../../utils/date'
  export default class Signed extends wepy.page {
    config = {
      navigationBarTitleText: '签到记录'
    }

    data = {
      date:null,
      year:'',
      month:'',
    }

    methods = {
      async nextMonth(){
        this.month = this.month + 1
        if (this.month>12) {
          this.month = 1
          this.year = this.year + 1
        } 
        let date = datapicker.getMonthData(this.year,this.month)
        date.days.forEach((item)=>{
          item.signed = false
        })
        this.date = date
        this.$apply()
      },
      async prevMonth(){
        this.month = this.month - 1
        if (this.month<1) {
          this.month = 12
          this.year = this.year - 1
        } 
        let date = datapicker.getMonthData(this.year,this.month)
        date.days.forEach((item)=>{
          item.signed = true
        })
        this.date = date
        this.$apply()
      }
    }

    async onLoad() {
      const now = new Date()
      this.year = now.getFullYear()
      this.month = now.getMonth() + 1
      this.date = datapicker.getMonthData(this.year,this.month)
    }
    async getSignData(){
      // const data = api.getSignData()
    }
  }
</script>
